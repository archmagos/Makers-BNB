extends layout

block content 
  div.header
    h1 ‚ò†Ô∏è Pirates BNB
  div.container
    div.listing_display.
      <img src=#{listingJSON.image_url} style="width:600px"><br>
      Title: #{listingJSON.title}<br>
      Desc: #{listingJSON.description}<br>
      Capacity: #{listingJSON.capacity}<br>
      Price: #{listingJSON.price} gold pieces<br>
      Rating: #{'üíÄ'.repeat(listingJSON.rating)}<br>
    each booking in bookings
      ul Booked by #{booking.name} for weeks #{booking.start_week}-#{booking.end_week} of 1699<br>
    div
      h2 Book this Ship:
      form(action='http://localhost:9292/bookings' method='post')
        input#listing_id(type='hidden' name='listing_id' value='#{listingJSON.id}')
        input#name(type='text' name='name' placeholder='Enter full name')
        input#start_week(type='text' name='start_week' placeholder='Start Week')
        input#end_week(type='text' name='end_week' placeholder='End Week')
        input#submit(type='submit' value='Ahoy!')
